<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Spotify2340" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spotify_black</item>
        <item name="colorPrimaryVariant">@color/spotify_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/spotify_green</item>
        <item name="colorSecondaryVariant">@color/spotify_green</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/black_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Spotify2340.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Spotify2340.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Spotify2340.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>